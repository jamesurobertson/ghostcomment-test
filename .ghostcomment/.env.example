# GitHub Configuration
# GitHub personal access token with "Pull requests" write permissions
# For GitHub Actions, use ${{ secrets.GITHUB_TOKEN }}
GITHUB_TOKEN=your_github_token_here

# GitLab Configuration (Optional)
# GitLab personal access token with API scope
GITLAB_TOKEN=your_gitlab_token_here

# Custom GitLab instance URL (Optional)
# Leave empty for gitlab.com
GITLAB_URL=https://gitlab.example.com

# GhostComment Configuration
# Custom config file path (Optional)
GC_CONFIG_PATH=.ghostcommentrc

# Git Configuration
# Override Git context (usually auto-detected)
GC_REPO_OWNER=your_username
GC_REPO_NAME=your_repository
GC_PULL_NUMBER=123

# Debug and Logging
# Set to 'true' to enable debug logging
GC_DEBUG=false

# Development
# Set to 'true' to enable dry-run mode (no actual API calls)
GC_DRY_RUN=false