{
  "name": "ghostcomment",
  "version": "1.0.0",
  "description": "Extract and post developer-to-reviewer comments from code to PR/MR discussions",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "ghostcomment": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build dist/index.js -o dist/",
    "dev": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "github",
    "gitlab",
    "pr",
    "merge-request",
    "comments",
    "code-review",
    "cli",
    "typescript"
  ],
  "author": "GhostComment",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "action.yml",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ghostcomment/ghostcomment.git"
  },
  "bugs": {
    "url": "https://github.com/ghostcomment/ghostcomment/issues"
  },
  "homepage": "https://github.com/ghostcomment/ghostcomment#readme"
}
